<project name="pharpackage" default="test">
	<target name="testOpenSSLSignature">
		<loadfile file="pass.txt" property="passphrase">
			<filterchain><striplinebreaks/></filterchain>
		</loadfile>
		<pharpackage
			basedir="."
			destfile="./pharpackage.phar"
			signature="openssl"
			key="priv.key"
			keypassword="${passphrase}"
			clistub="src/cli.php"
			webstub="src/web.php"
		>
			<fileset dir=".">
				<include name="*.xml" />
			</fileset>
		</pharpackage>
	</target>
</project>
